@using TrainingFPT.DBContext
@model UsersDBContext;
@{
    ViewData["Title"] = "Add Trainer";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="row vh-100">
    <div class="col-sm-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h5> Add New Training Staff</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="post" asp-action="TrainerAdd">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="Username">Username</label>
                                <input asp-for="Username" class="form-control" />
                                <input asp-for="RoleId" type="hidden" value="3" class="form-control" />
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ExtraCode">Extra Code</label>
                                <input asp-for="ExtraCode" class="form-control" />
                                <span class="text-danger" asp-validation-for="ExtraCode"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" rows="5" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Birthday">BirthDay</label>
                                <input asp-for="Birthday" class="form-control" type="date" />
                                <span class="text-danger" asp-validation-for="Birthday"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="Phone">Phone</label>
                                <input asp-for="Phone" class="form-control" />
                                <span class="text-danger" asp-validation-for="Phone"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select class="form-control" asp-for="Status">
                                    <option value="Active">Active</option>
                                    <option value="Deactive">Deactive</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gender" class="control-label"></label>
                                <select class="form-control" asp-for="Gender">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address">Address</label>
                                <input asp-for="Address" class="form-control" rows="5" />
                                <span class="text-danger" asp-validation-for="Address"></span>
                            </div>            
                        </div>

                        <div class="sm-12 col-md-6">
                            <button class="btn btn-primary my-3" type="submit"> Save </button>
                            <a class="btn btn-info ms-3 mb-0" href="@Url.Action("TrainerIndex","Users")">Back to lists</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>